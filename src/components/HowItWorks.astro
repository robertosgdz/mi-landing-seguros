---
// IMPORTACIONES DE COMPONENTES REACT
import SecureFeatures from '../components/SecureFeatures.jsx';
---
<!-- Sección: Cómo funciona ASEOFI -->
<section id="how-it-works" class="py-20 md:py-32 bg-white overflow-hidden -mt-32 md:-mt-40 lg:-mt-40 relative z-20">
  
  <!-- Contenedor principal -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Grid principal: video + contenido -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-10 lg:gap-12 items-stretch min-h-150">
      
      <!-- Columna izquierda: video demostrativo -->
      <div class="aspect-3/4 lg:aspect-auto lg:h-full w-full md:w-1/2 md:max-h-175 md:mx-auto lg:mx-0 lg:-ml-20 lg:w-11/12 max-h-150 lg:max-h-none mb-15 md:mb-18 lg:mb-0">
        
        <!-- Contenedor de video con borde y sombra -->
        <div class="relative rounded-2xl overflow-hidden border border-gray-100 group h-full shadow-sm">
          
          <!-- Overlay oscuro sutil -->
          <div class="absolute inset-0 bg-black/5 z-10 pointer-events-none"></div>
          
          <!-- Video de demostración -->
          <video 
            class="absolute inset-0 w-full h-full object-cover object-center"
            autoplay 
            loop 
            muted 
            playsinline
            preload="none"
          >
            <source src="/secure01.mp4" type="video/mp4" />
          </video>
        </div>
      </div>

      <!-- Columna derecha: contenido explicativo -->
      <div class="flex flex-col justify-start pt-0 pb-10">
        
        <!-- Título principal -->
        <div class="mb-10 -mt-5">
          <h2 class="text-4xl md:text-7xl font-bold text-gray-900 leading-tight mb-0 uppercase tracking-tighter">
            Solicita Y Asegura En Minutos
          </h2>
        </div>

        <!-- Componente React: características y flujo -->
        <SecureFeatures client:only="react" />

      </div>

    </div>

  </div>

</section>
